<p style="color: green"><%= notice %></p>

<h1>Hrm sessions</h1>

<table id="hrm_sessions" class="table">
  <thead>
    <tr>
        <td>ID</td>
        <td>User</td>
        <td>Time</td>
        <td>Min BPM</td>
        <td>Max BPM</td>
        <td>Avg BPM</td>
        <td>Action</td>
    </tr>
  </thead>
  <tbody>
      <% @hrm_sessions.each do |hrm_session| %>
        <tr>
          <td><%= hrm_session.id %></td>
          <td><%= hrm_session.user.username %></td>
          <td><%= hrm_session.duration_in_seconds %></td>
          <td><%= (hrm_session.min_beats_per_minute || 0)%></td>
          <td><%= (hrm_session.max_beats_per_minute || 0)%></td>
          <td><%= (hrm_session.avg_beats_per_minute || 0).round(2) %></td>
          <td><%= link_to "View Details", hrm_session %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<%= will_paginate @hrm_sessions %>

